<section class="section">
  <div class="row">
    <div class="col-11 col-sm-6 mx-auto">
      {{> messages }}
    </div>
  </div>


  <div class="row m-0 px-3 p-md-0">

    {{#each posts}}
    <div class="col-12 col-sm-5 col-md-3 col-xl-2 mx-auto bg-white p-2 my-3 rounded z-depth-1">
      <ul class="p-0">
        <li class="media">
          <img src="{{picture}}" alt="" class="logo mr-3">
          <div class="media-body">

            <small class="blue-text font-weight-bold m-0 d-block">{{name}}</small>
            <small class="text-muted">{{date}}</small>

            <div class="form-group m-0">
              <ul class="list-unstyled">
                
                <li class="media  light-blue darken-3 mb-1 white-text font-weight-bold rounded">
                  <small><i class="icon-music_note mr-3 lnzero">1:</i></small>
                  <div class="media">
                    <small>{{song1}}</small>
                  </div>
                </li>

                 <li class="media  light-blue darken-3 mb-1 white-text font-weight-bold rounded">
                  <small><i class="icon-music_note mr-3 lnzero">2:</i></small>
                  <div class="media">
                    <small>{{song2}}</small>
                  </div>
                </li>

                 <li class="media  light-blue darken-3 mb-1 white-text font-weight-bold rounded">
                  <small><i class="icon-music_note mr-3 lnzero">3:</i></small>
                  <div class="media">
                    <small class="">{{song3}}</small>
                  </div>
                </li>

                 <li class="media  light-blue darken-3 mb-1 white-text font-weight-bold rounded">
                  <small><i class="icon-music_note mr-3 lnzero">4:</i></small>
                  <div class="media">
                    <small>{{song4}}</small>
                  </div>
                </li>

                 <li class="media  light-blue darken-3 mb-1 white-text font-weight-bold rounded">
                  <small><i class="icon-music_note mr-3 lnzero">5:</i></small>
                  <div class="media">
                    <small>{{song5}}</small>
                  </div>
                </li>

              </ul>

            </div>

          </div>
        </li>
      </ul>
    </div>
    {{/each}}

  </div>


</section>