<section class="section">
  <div class="row">
    <div class="col-11 col-sm-6 mx-auto">
      {{> messages }}
    </div>
  </div>


  <div class="row ml-3 mr-3 px-3 p-md-0 justify-content-center">

    {{#each posts}}
    
    <div class="col-12 col-sm-5 col-lg-3 col-xl-2 mr-2 bg-white p-2 my-3 rounded z-depth-1 ">
      <ul class="p-0">
        <li class="media">
          <img src="{{picture}}" alt="" class="logo mr-3">
          <div class="media-body">

            <small class="blue-text font-weight-bold m-0 d-block">{{name}}</small>
            <small class="text-muted">{{date}}</small>

            <div class="form-group m-0">
              <ul class="list-unstyled">
                
                <li class="media  mb-1  font-weight-bold rounded">
                  <small><i class="fas fa-music mr-3 lnzero bg-primary white-text px-1 rounded-circle"></i></small>
                  <div class="media">
                    <small>{{song1}}</small>
                  </div>
                </li>

                 <li class="media  mb-1  font-weight-bold rounded">
                  <small><i class="fas fa-music mr-3 lnzero bg-primary white-text px-1 rounded-circle"></i></small>
                  <div class="media">
                    <small>{{song2}}</small>
                  </div>
                </li>

                 <li class="media  mb-1  font-weight-bold rounded">
                  <small><i class="fas fa-music mr-3 lnzero bg-primary white-text px-1 rounded-circle"></i></small>
                  <div class="media">
                    <small class="">{{song3}}</small>
                  </div>
                </li>

                 <li class="media  mb-1  font-weight-bold rounded">
                  <small><i class="fas fa-music mr-3 lnzero bg-primary white-text px-1 rounded-circle"></i></small>
                  <div class="media">
                    <small>{{song4}}</small>
                  </div>
                </li>

                 <li class="media  mb-1  font-weight-bold rounded">
                  <small><i class="fas fa-music mr-3 lnzero bg-primary white-text px-1 rounded-circle"></i></small>
                  <div class="media">
                    <small>{{song5}}</small>
                  </div>
                </li>

              </ul>

            </div>

          </div>
        </li>
      </ul>
    </div>
    {{/each}}

  </div>


</section>